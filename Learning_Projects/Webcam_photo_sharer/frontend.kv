<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 20
        spacing: 10
        Camera:
            resolution: (1080, 960)
            play: True
        Button:
            text: 'START CAMERA'
            size_hint_y: 0.1
            on_press: root.start()
        Button:
            text: 'STOP CAMERA'
            size_hint_y: 0.1
            on_press: root.stop()

        Button:
            text: 'CAPTURE VIEW'
            size_hint_y: 0.1
            on_press: root.capture

<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    
